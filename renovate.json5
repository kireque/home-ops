{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "github>kireque/renovate-config",
    "github>kireque/home-ops//.renovate/overrides.json5",
    "github>kireque/home-ops//.renovate/groups.json5",
    "github>kireque/home-ops//.renovate/autoMerge.json5",
    "github>kireque/home-ops//.renovate/grafanaDashboards.json5",
  ],
  flux: {
    managerFilePatterns: ["/^kubernetes/.+\\.yaml(?:\\.j2)?$/"],
  },
  "helm-values": {
    managerFilePatterns: ["/^kubernetes/.+\\.yaml(?:\\.j2)?$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/^kubernetes/.+\\.yaml(?:\\.j2)?$/"],
  },
  packageRules: [
    {
      description: "Configure prompp versioning",
      matchDatasources: ["docker"],
      matchPackageNames: ["docker.io/prompp/prompp"],
      versioning: "regex:^(?<build>.*)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
    },
    {
      description: "Configure Emby versioning",
      matchDatasources: ["docker"],
      matchPackageNames: ["ghcr.io/home-operations/emby"],
      versioning: "loose",
    },    
  ],
}
